{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, 
    "baseUrl": "./",  
    "esModuleInterop": true,  
    "importHelpers": true,
    "module": "esnext", 
    "moduleResolution": "node",
    "strict": false,  
    "sourceMap": true, 
    "skipLibCheck": true,  
    "target": "esnext",      
    "types": [
      "node"
    ],
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"]
    },
    
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "jsx": "preserve" 

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/vue.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}